generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Customer {
  id       Int        @id @default(autoincrement())
  name     String?
  email    String     @unique
  role     ROLE       @default(CUSTOMER)
  Orders   Orders[]
  meals    Meals[]
  feedback Feedback[]
  profiles Profile?

  @@map("Customer")
}

model Profile {
  id          Int       @id @default(autoincrement())
  bio         String
  dateOfBirth DateTime?
  customerId  Int       @unique
  customer    Customer  @relation(fields: [customerId], references: [id])
}

enum ROLE {
  ADMIN
  CUSTOMER
  PROVIDER
}
